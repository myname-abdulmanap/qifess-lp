   .main-title {
    font-size: 2.75rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 1.5rem 0;
    letter-spacing: -0.025em;
    background: linear-gradient(135deg, #1e293b 0%, #475569 100%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .main-description {
    max-width: 42rem;
    margin: 2rem auto 0;
    color: var(--text-secondary, #64748b);
    font-size: 1.2rem;
    line-height: 1.7;
    font-weight: 400;
  }

  /* Features Grid */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-bottom: 8rem;
  }

  .feature-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(10px);
    padding: 2.5rem;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    overflow: hidden;
    text-align: center;
  }

  .feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--feature-gradient);
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }

  .feature-card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
  }

  .feature-card:hover::before {
    transform: scaleX(1);
  }

  .feature-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    position: relative;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    transition: transform 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .feature-icon.efficient {
    background: linear-gradient(135deg, #ff6b6b, #ee5253);
    --feature-gradient: linear-gradient(135deg, #ff6b6b, #ee5253);
  }

  .feature-icon.complete {
    background: linear-gradient(135deg, #48a0f9, #3b82f6);
    --feature-gradient: linear-gradient(135deg, #48a0f9, #3b82f6);
  }

  .feature-icon.cloud {
    background: linear-gradient(135deg, #feca57, #f59e0b);
    --feature-gradient: linear-gradient(135deg, #feca57, #f59e0b);
  }

  .feature-icon.custom {
    background: linear-gradient(135deg, #a855f7, #8b5cf6);
    --feature-gradient: linear-gradient(135deg, #a855f7, #8b5cf6);
  }

  .feature-card:nth-child(1) { --feature-gradient: linear-gradient(135deg, #ff6b6b, #ee5253); }
  .feature-card:nth-child(2) { --feature-gradient: linear-gradient(135deg, #48a0f9, #3b82f6); }
  .feature-card:nth-child(3) { --feature-gradient: linear-gradient(135deg, #feca57, #f59e0b); }
  .feature-card:nth-child(4) { --feature-gradient: linear-gradient(135deg, #a855f7, #8b5cf6); }

  .feature-content h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--heading-color, #1e293b);
    margin-bottom: 1rem;
    transition: color 0.3s ease;
  }

  .feature-card:hover .feature-content h3 {
    color: #4338ca;
  }

  .feature-content p {
    color: var(--text-body, #64748b);
    font-size: 1rem;
    line-height: 1.6;
  }

  /* Who Needs Section */
  .who-needs-section {
    margin-top: 6rem;
  }

  .who-needs-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--heading-color, #1e293b);
    position: relative;
    display: inline-block;
  }

  .section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 3px;
    background: linear-gradient(to right, #4338ca, #ec4899);
    border-radius: 3px;
    transition: width 0.8s cubic-bezier(0.22, 1, 0.36, 1);
  }
  
  .section-title.animate::after {
    width: 80px;
  }

  .target-audience-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .audience-card {
    background: white;
    padding: 2.5rem 2rem;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .audience-card:hover {
    transform: translateY(-8px) scale(1.05);
    box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
  }

  .audience-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 1.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    position: relative;
    z-index: 2;
  }

  .audience-icon.field-service {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
  }

  .audience-icon.network {
    background: linear-gradient(135deg, #48c6ef, #6f86d6);
    color: white;
  }

  .audience-icon.surveyor {
    background: linear-gradient(135deg, #fa709a, #fee140);
    color: white;
  }

  .audience-icon.sales {
    background: linear-gradient(135deg, #a8edea, #fed6e3);
    color: #4338ca;
  }

  .audience-card:hover .audience-icon {
    transform: scale(1.2);
  }

  .audience-card h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--heading-color, #1e293b);
    transition: color 0.3s ease;
  }

  .audience-card:hover h3 {
    color: #4338ca;
  }

  .card-decoration {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: linear-gradient(90deg, #4338ca, #ec4899);
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }

  .audience-card:hover .card-decoration {
    transform: scaleX(1);
  }

  /* Background Decorations */
  .bg-decoration {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(135deg, rgba(67, 56, 202, 0.1), rgba(236, 72, 153, 0.1));
    animation: float 8s ease-in-out infinite;
  }

  .bg-decoration-1 {
    width: 300px;
    height: 300px;
    top: 10%;
    right: -150px;
    animation-delay: 0s;
  }

  .bg-decoration-2 {
    width: 200px;
    height: 200px;
    bottom: 20%;
    left: -100px;
    animation-delay: 4s;
  }

  /* Animations */
  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
  }

  .animate-element {
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .animate-element.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .fade-up {
    transform: translateY(50px);
  }

  .fade-in-up {
    transform: translateY(30px);
  }

  .fade-in-scale {
    transform: translateY(30px) scale(0.9);
  }

  .fade-in-scale.animate {
    transform: translateY(0) scale(1);
  }

  /* Staggered animations */
  .feature-card:nth-child(1).animate { transition-delay: 0.1s; }
  .feature-card:nth-child(2).animate { transition-delay: 0.2s; }
  .feature-card:nth-child(3).animate { transition-delay: 0.3s; }
  .feature-card:nth-child(4).animate { transition-delay: 0.4s; }

  .audience-card:nth-child(1).animate { transition-delay: 0.1s; }
  .audience-card:nth-child(2).animate { transition-delay: 0.2s; }
  .audience-card:nth-child(3).animate { transition-delay: 0.3s; }
  .audience-card:nth-child(4).animate { transition-delay: 0.4s; }

  /* Responsive Design */
  @media (max-width: 768px) {
    .why-qifess-section {
      padding: 4rem 0;
    }
    
    .main-title {
      font-size: 2.5rem;
    }
    
    .section-title {
      font-size: 2rem;
    }
    
    .features-grid {
      grid-template-columns: 1fr;
      margin-bottom: 6rem;
    }
    
    .target-audience-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }
    
    .feature-card,
    .audience-card {
      padding: 2rem 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .main-title {
      font-size: 2rem;
    }
    
    .section-title {
      font-size: 1.75rem;
    }
    
    .feature-card,
    .audience-card {
      padding: 1.5rem 1rem;
    }
    
    .feature-icon,
    .audience-icon {
      width: 60px;
      height: 60px;
    }
  }
</style>