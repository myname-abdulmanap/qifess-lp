---
import ThemeToggle from "./ThemeToggle.astro";
---

<style>
  header {
    position: fixed;
    width: 100%;
    z-index: 1000;
    transition: all 0.5s ease;
  }

  header.transparent {
    background: transparent;
    box-shadow: none;
  }

  header.white {
    background: var(--bg-color);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .nav-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    position: relative;
    display: inline-block;
    width: 100px;
    height: 50px;
    overflow: visible;
  }

  .logo-img {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 150px;
    height: auto;
    transform: translate(-50%, -50%);
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .logo-white {
    opacity: 0;
    filter: brightness(0) invert(1);
  }

  header.transparent .logo-white {
    opacity: 1;
  }

  header.transparent .logo-dark {
    opacity: 0;
  }

  .menu ul {
    display: flex;
    gap: 2.5rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu a {
    text-decoration: none;
    color: var(--text-bar);
    font-weight: bold;
    transition: color 0.3s;
    font-size: 1.1rem;
  }

  header.white .menu a {
    color: var(--text-color);
  }

  .navbar-icons {
    display: flex;
    align-items: center;
  }

  .navbar-icons .icon {
    margin-left: 20px;
    font-size: medium;
    background-color: var(--bg-color);
    padding: 2px;
    border-radius: 10px;
  }

  .bar {
    display: block;
    width: 27px;
    height: 6px;
    margin: 3px;
    background-color: var(--text-bar);
    transition: 0.3s;
  }

  header.white .bar {
    background-color: var(--text-color);
  }

  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1001;
    padding: 15px;
  }

  /* Overlay for mobile menu */
  .overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }

  .overlay.active {
    display: block;
  }

  /* Dropdown styling */
  .has-dropdown {
    position: relative;
  }

  .has-dropdown .dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    background-color: var(--bg-color);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    min-width: 200px;
    padding: 0;
    z-index: 999;
    
    /* Animation properties */
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition: opacity 0.3s ease, transform 0.3s ease, visibility 0.3s;
    overflow: hidden;
    max-height: 0;
    transition: all 0.3s ease;
  }

  .has-dropdown.open .dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    max-height: 200px; /* Adjust based on your content */
    padding: 0.5rem 0;
  }

  .dropdown li {
    margin: 0;
    padding: 0;
  }

  .dropdown a {
    padding: 0.75rem 1.5rem;
    display: block;
    color: var(--text-color);
    font-weight: normal;
    font-size: 1rem;
    transition: background 0.2s;
    white-space: nowrap;
  }

  .dropdown a:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }

  /* Style for dropdown toggle indicator */
  .dropdown-toggle {
    display: flex;
    align-items: center;
  }

  .dropdown-toggle::after {
    content: 'â–¼';
    display: inline-block;
    margin-left: 6px;
    font-size: 0.7em;
    transition: transform 0.3s ease;
  }

  .has-dropdown.open .dropdown-toggle::after {
    transform: rotate(180deg);
  }

  @media (max-width: 768px) {
    .hamburger {
      display: block;
    }

    .menu {
      position: fixed;
      top: 0;
      left: -280px;
      height: 100vh;
      width: 280px;
      background: var(--bg-color);
      padding: 2rem;
      transition: left 0.3s ease;
      z-index: 1000;
    }

    header.transparent .menu a {
      color: var(--text-color);
    }

    .menu.active {
      left: 0;
    }

    .menu ul {
      flex-direction: column;
      gap: 1rem;
    }

    .hamburger.active .bar:nth-child(1) {
      transform: rotate(-45deg) translate(-5px, 6px);
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(3) {
      transform: rotate(45deg) translate(-5px, -6px);
    }
    
    /* Mobile dropdown styles */
    .has-dropdown .dropdown {
      position: static;
      box-shadow: none;
      border-radius: 0;
      background: transparent;
      padding-left: 1rem;
      max-height: 0;
      overflow: hidden;
    }
    
    .has-dropdown.open .dropdown {
      max-height: 500px;
    }
    
    .dropdown a {
      padding: 0.5rem 0;
    }
  }
</style>

<div class="overlay"></div>
<header class="transparent">
  <div class="nav-container">
    <div class="logo">
      <a href="/">
        <img class="logo-img logo-dark" src="/assets/img/qualita_indonesia_logo.png" alt="Logo" width="50" height="50" />
        <img class="logo-img logo-white" src="/assets/img/qualita_indonesia_logo.png" alt="Logo" width="50" height="50" />
      </a>
    </div>
    <nav class="menu">
      <ul>
        <li><a href="/#">Home</a></li>
        <li><a href="/about">About Us</a></li>
        <li class="has-dropdown">
          <a href="#" class="dropdown-toggle">Products</a>
          <ul class="dropdown">
            <li><a href="https://protectqube.com">ProtectCube</a></li>
            <li><a href="https://qifess.com">Qifess</a></li>
          </ul>
        </li>
        <li><a href="/#contact">Contact Us</a></li>
        <li><a href="#">News</a></li>
      </ul>
    </nav>
    
    <div class="navbar-icons">
      <ThemeToggle />
      <button class="hamburger" aria-label="Menu">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </button>
    </div>
  </div>
</header>

