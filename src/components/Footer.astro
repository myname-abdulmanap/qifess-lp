const footerLinks = [
  { name: 'Home', url: '/' },
  { name: 'About Us', url: '/about' },
  { name: 'Contact Us', url: '/contact' },
  // { name: 'Our Gallery', url: '/#gallery' },
  { name: 'Our Products', url: '/products' },
  // { name: 'Our Services', url: '/#services' },
  // { name: 'Careers', url: '/careers' },
  // { name: 'News', url: '/posts' },
];

// Contact info
const contactInfo = {
  email: 'contact@qualita-indonesia.com',
  // emailCareer: 'career@qualita-indonesia.com',
};
---

<footer class="footer">
  <div class="footer-container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Company Info -->
      <div class="company-info">
        <img
          src="/assets/img/qifess-logo.png"
          alt="Qualita Indonesia Logo"
          class="logo-img"
          width="100"
          height="100"
        /><br />
        <p class="company-description">
          QIFESS provides all essential features for managing field service operations with
          real-time tracking, scheduling, and analytics. <br />
        </p>

        <!-- Contact and Social -->
        <div class="contact-social">
          <a href="mailto:contact@qualita-indonesia.com" class="email-link">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
              ></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
            {contactInfo.email}
          </a>

          <div class="social-links">
            {
              socialLinks.map((social) => (
                <a
                  href={social.url}
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`${social.name} Profile`}
                  class="social-link"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 32 32"
                    class="social-icon"
                  >
                    <Fragment set:html={social.icon} />
                  </svg>
                </a>
              ))
            }
          </div>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="quick-links">
        <h4 class="links-heading">Quick Links</h4>
        <ul class="links-list">
          {
            footerLinks.map((link) => (
              <li class="link-item">
                <a href={link.url} class="footer-link">
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Certificates -->
      <div class="certificates">
        <h4 class="cert-heading">Certifications</h4>
        <div class="cert-list">
          <div class="cert-item">
            ✔
            <span>ISO 9001:2015</span>
          </div>
          <!-- <div class="cert-item">
            ✔
            <span>ISO 27001:2023</span>
          </div> -->
          <!-- <div class="cert-item">
            ✔
            <span>CMMI Level 3</span>
          </div> -->
        </div>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <p class="copyright">
        &copy; {today.getFullYear()} PT. QUALITA INDONESIA. All rights reserved.
      </p>
      <!-- <div class="legal-links">
        <a href="/privacy-policy" class="legal-link">Privacy Policy</a>
        <a href="/terms-of-service" class="legal-link">Terms of Service</a>
      </div> -->
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-features, #f8f9fa);
    color: var(--text-color, #333);
    padding: 3rem 0 1rem;
    position: relative;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .footer-main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr;
    gap: 3rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .company-name {
    font-size: 1.5rem;
    font-weight: 600;
    margin: 0 0 1rem;
    color: var(--text-color, #333);
  }

  .company-description {
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--text-color, #333);
    opacity: 0.85;
    margin: 0 0 1.5rem;
  }

  .contact-social {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .email-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-color, #333);
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
  }

  .email-link:hover {
    color: var(--link-color, #0077cc);
  }

  .social-links {
    display: flex;
    gap: 0.75rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, 0.05);
    color: var(--text-color, #333);
    transition: all 0.3s ease;
  }

  .social-link:hover {
    transform: translateY(-3px);
    background-color: var(--link-color, #0077cc);
    color: white;
  }

  .links-heading,
  .cert-heading {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0 0 1.25rem;
    position: relative;
    padding-bottom: 0.75rem;
  }

  .links-heading:after,
  .cert-heading:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background-color: #0077cc;
  }

  .links-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem 1rem;
  }

  .footer-link {
    color: var(--text-color, #333);
    opacity: 0.8;
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.2s ease;
    position: relative;
  }

  .footer-link:hover {
    color: var(--link-color, #0077cc);
    opacity: 1;
    transform: translateX(3px);
  }

  .cert-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .cert-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    color: var(--text-color, #333);
    opacity: 0.85;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright {
    margin: 0;
    font-size: 0.85rem;
    color: var(--text-color, #333);
    opacity: 0.7;
  }

  .legal-links {
    display: flex;
    gap: 1.5rem;
  }

  .legal-link {
    color: var(--text-color, #333);
    opacity: 0.7;
    text-decoration: none;
    font-size: 0.85rem;
    transition: color 0.2s ease;
  }

  .legal-link:hover {
    color: var(--link-color, #0077cc);
    opacity: 1;
  }

  @media (max-width: 900px) {
    .footer-main {
      grid-template-columns: 1fr 1fr;
    }

    .company-info {
      grid-column: span 2;
      margin-bottom: 1rem;
    }
  }

  @media (max-width: 640px) {
    .footer {
      padding: 2.5rem 0 1rem;
    }

    .footer-container {
      padding: 0 1.5rem;
    }

    .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .company-info {
      grid-column: span 1;
    }

    .links-list {
      grid-template-columns: 1fr;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
