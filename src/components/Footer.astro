<style>
  .footer {
    background-color: var(--color-features);
    color: var(--text-color);
    padding: 4rem 2rem 2rem;
    position: relative;
  }

  .footer-grid {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 2fr;
    gap: 3rem;
    margin-bottom: 3rem;
  }

  .brand-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    color: var(--text-color);
  }

  .footer-description {
    color: var(--text-color);
    opacity: 0.8;
    line-height: 1.6;
    margin: 0;
  }

  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }

  .social-link {
    color: var(--text-color);
    opacity: 0.8;
    transition: all 0.3s ease;
    padding: 0.5rem;
    border-radius: 8px;
    background: rgb(var(--gray-dark), 0.1);
  }

  .social-link:hover {
    opacity: 1;
    transform: translateY(-2px);
    background: rgb(var(--gray-dark), 0.2);
  }

  .links-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .links-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
    color: var(--text-color);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.8rem;
  }

  .footer-link {
    color: var(--text-color);
    opacity: 0.8;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .footer-link:hover {
	color: var(--link-color);
    opacity: 1;
    transform: translateX(5px);
  }

  
  .bottom-bar {
    max-width: 1200px;
    margin: 0 auto;
    padding-top: 2rem;
    border-top: 1px solid rgb(var(--gray-dark), 0.1);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .copyright,
  .love {
    margin: 0;
    color: var(--text-color);
    opacity: 0.8;
    font-size: 0.9rem;
  }

  .heart {
    display: inline-block;
    animation: heartbeat 1.5s ease infinite;
  }


  .newsletter-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 400px;
  }

  .newsletter-content {
    margin-bottom: 0.5rem;
  }

  .newsletter-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
    color: var(--text-color);
  }

  .newsletter-description {
    color: var(--text-color);
    opacity: 0.8;
    margin: 0.25rem 0 0 0;
    font-size: 0.9rem;
  }

  .newsletter-form {
    display: flex;
    gap: 0.5rem;
    width: 100%;
  }

  .newsletter-input {
    flex: 1;
    padding: 0.6rem 1rem;
    border-radius: 8px;
    border: 1px solid rgb(var(--gray-dark), 0.1);
    background: var(--light);
    color: var(--text-color);
    font-size: 0.9rem;
	
    min-width: 0; /* Prevents input from overflowing */
  }

  .newsletter-input::placeholder {
    color: var(--dark);
    opacity: 0.5;
	
  }

  .newsletter-button {
    padding: 0.6rem 1.2rem;
    border-radius: 10px;
    border-color: var(--color-bar);
    background: var(--light);
    color: var(--dark);
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
  }

  .button-text-mobile {
    display: none;
  }

  .newsletter-button:hover {
    opacity: 0.9;
    transform: translateY(-2px);
  }

  @keyframes heartbeat {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.1);
    }
    100% {
      transform: scale(1);
    }
  }

  @media (max-width: 1024px) {

	.footer-grid {
      grid-template-columns: 1fr 1fr;
      gap: 2rem;
    }

    .brand-section {
      grid-column: 1 / -1;
    }

    .newsletter-section {
      grid-column: 1 / -1;
      max-width: 100%;
    }
  
  }

  @media (max-width: 640px) {
    .footer {
      padding: 3rem 1.5rem 1.5rem;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .bottom-bar {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }
	.footer {
      padding: 3rem 1rem 1.5rem;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

	

    .newsletter-section {
      padding: 1rem;
      background: rgb(var(--gray-dark), 0.05);
      border-radius: 12px;
      margin: 0 -0.5rem;
    }

    .newsletter-content {
      margin-bottom: 0.75rem;
    }

    .newsletter-description {
      font-size: 0.85rem;
    }

    .newsletter-form {
      flex-direction: row;
      gap: 0.5rem;
    }

    .newsletter-input {
      height: 40px;
      padding: 0 0.75rem;
      font-size: 0.85rem;
    }

    .newsletter-button {
      padding: 0;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .button-text {
      display: none;
    }

    .button-text-mobile {
      display: block;
      font-size: 1.2rem;
    }

    .bottom-bar {
      flex-direction: column;
      text-align: center;
      gap: 0.5rem;
    }
}
</style>

