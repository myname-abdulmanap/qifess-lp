---
// CTASection.astro
---

<section class="cta-section">
  <div class="container">
    <!-- Hero Text Section -->
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">Interested in Qifess?</h1>
        <p class="hero-subtitle">
          Join thousands of satisfied users who have transformed their workflow with our innovative
          platform
        </p>
        <div class="hero-stats">
          <div class="stat-item">
            <span class="stat-number">10K+</span>
            <span class="stat-label">Active Users</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">99%</span>
            <span class="stat-label">Satisfaction</span>
          </div>
          <div class="stat-item">
            <span class="stat-number">24/7</span>
            <span class="stat-label">Support</span>
          </div>
        </div>
      </div>
    </div>

 

  </div>
</section>

<style>
  .cta-section {
    padding: 60px 0;
    background: var(--bg-main);
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 20%, rgba(37, 99, 235, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(76, 201, 240, 0.1) 0%, transparent 50%),
      linear-gradient(135deg, rgba(37, 99, 235, 0.02) 0%, rgba(76, 201, 240, 0.02) 100%);
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 1;
  }

  /* Hero Content */
  .hero-content {
    text-align: center;
    margin-bottom: 80px;
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 20px;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: 1.2rem;
    color: var(--text-light);
    max-width: 600px;
    margin: 0 auto 40px;
    line-height: 1.6;
  }

  .hero-stats {
    display: flex;
    justify-content: center;
    gap: 60px;
    margin-top: 40px;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 800;
    color: var(--primary-color);
    line-height: 1;
  }

  .stat-label {
    display: block;
    font-size: 0.9rem;
    color: var(--text-light);
    margin-top: 8px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Pricing Section */
  .pricing-section {
    margin-bottom: 80px;
  }

  .section-header {
    text-align: center;
    margin-bottom: 60px;
  }

  .section-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--heading-color);
    margin-bottom: 16px;
  }

  .section-header p {
    font-size: 1.1rem;
    color: var(--text-light);
    opacity: 0.9;
  }

  .pricing-container {
    position: relative;
  }

  .pricing-bg-decoration {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 800px;
    height: 400px;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.03), rgba(76, 201, 240, 0.03));
    border-radius: 50%;
    filter: blur(100px);
    pointer-events: none;
  }

  .pricing-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    align-items: stretch;
    position: relative;
    z-index: 2;
  }

  .pricing-card {
    position: relative;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .pricing-card.blurred {
    filter: blur(1.5px);
    opacity: 0.7;
    transform: scale(0.95);
    pointer-events: none;
  }

  .pricing-card.featured {
    transform: scale(1.05);
    z-index: 10;
  }

  .card-inner {
    background: var(--color-card);
    border-radius: 20px;
    padding: 40px;
    height: 100%;
    position: relative;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .pricing-card:not(.blurred) .card-inner:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(37, 99, 235, 0.15);
  }

  .pricing-card.featured .card-inner {
    background: linear-gradient(135deg, var(--color-card), rgba(37, 99, 235, 0.05));
    border: 2px solid var(--primary-color);
    box-shadow: 0 25px 50px rgba(37, 99, 235, 0.2);
  }

  .popular-badge {
    position: absolute;
    top: -15px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
    padding: 12px 24px;
    border-radius: 25px;
    font-size: 0.8rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    box-shadow: 0 10px 20px rgba(37, 99, 235, 0.3);
    display: flex;
    align-items: center;
    gap: 8px;
    z-index: 10;
  }

  .badge-icon {
    font-size: 1rem;
  }

  .card-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .plan-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.1), rgba(76, 201, 240, 0.1));
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-color);
    transition: var(--transition);
  }

  .plan-icon.featured-icon {
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
    transform: scale(1.1);
  }

  .card-header h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--heading-color);
    margin-bottom: 12px;
  }

  .price {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 4px;
    margin-bottom: 12px;
  }

  .currency {
    font-size: 1.1rem;
    color: var(--text-light);
    font-weight: 600;
  }

  .amount {
    font-size: 3rem;
    font-weight: 800;
    color: var(--primary-color);
    line-height: 1;
  }

  .period {
    font-size: 1rem;
    color: var(--text-light);
    font-weight: 500;
  }

  .plan-description {
    color: var(--text-light);
    font-size: 0.95rem;
    opacity: 0.8;
  }

  .features {
    list-style: none;
    padding: 0;
    margin: 0 0 30px 0;
  }

  .features li {
    display: flex;
    align-items: center;
    padding: 12px 0;
    color: var(--text-color);
    font-size: 0.95rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    transition: var(--transition);
  }

  .features li:last-child {
    border-bottom: none;
  }

  .feature-icon {
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background: rgba(37, 99, 235, 0.1);
    color: var(--primary-color);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
    font-weight: 700;
    margin-right: 12px;
    flex-shrink: 0;
  }

  .feature-icon.premium {
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
  }

  .btn-cta {
    width: 100%;
    padding: 16px 24px;
    border: none;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
  }

  .btn-cta:not(.primary) {
    background: transparent;
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
  }

  .btn-cta:not(.primary):hover {
    background: var(--primary-color);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(37, 99, 235, 0.3);
  }

  .btn-cta.primary {
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
    border: none;
    position: relative;
  }

  .btn-cta.primary::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.6s;
  }

  .btn-cta.primary:hover::before {
    left: 100%;
  }

  .btn-cta.primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(37, 99, 235, 0.4);
  }

  .btn-text,
  .btn-icon {
    transition: var(--transition);
  }

  .btn-cta.primary:hover .btn-icon {
    transform: translateX(4px);
  }

  .trial-note {
    margin-top: 12px;
    font-size: 0.8rem;
    color: var(--text-light);
    opacity: 0.7;
    text-align: center;
  }

  /* Bottom CTA */
  .bottom-cta {
    text-align: center;
    padding: 60px 40px;
    background: linear-gradient(135deg, rgba(37, 99, 235, 0.05), rgba(76, 201, 240, 0.05));
    border-radius: 24px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .bottom-cta h3 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--heading-color);
    margin-bottom: 16px;
  }

  .bottom-cta p {
    font-size: 1.1rem;
    color: var(--text-light);
    margin-bottom: 32px;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    flex-wrap: wrap;
  }

  .btn-secondary,
  .btn-primary {
    padding: 16px 32px;
    border-radius: 12px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 8px;
    text-transform: none;
  }

  .btn-secondary {
    background: transparent;
    color: var(--text-color);
    border: 2px solid rgba(255, 255, 255, 0.2);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateY(-2px);
  }

  .btn-primary {
    background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
    color: white;
    border: none;
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 35px rgba(37, 99, 235, 0.3);
  }

  .btn-arrow {
    transition: transform 0.3s ease;
  }

  .btn-primary:hover .btn-arrow {
    transform: translateX(4px);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero-stats {
      gap: 40px;
    }

    .pricing-cards {
      grid-template-columns: 1fr;
      gap: 20px;
      max-width: 400px;
      margin: 0 auto;
    }

    .pricing-card.featured {
      transform: scale(1);
    }

    .pricing-card.blurred {
      transform: scale(1);
      filter: blur(1px);
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-stats {
      flex-direction: column;
      gap: 30px;
    }

    .section-header h2 {
      font-size: 2rem;
    }

    .card-inner {
      padding: 30px 25px;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn-secondary,
    .btn-primary {
      width: 100%;
      max-width: 280px;
    }
  }

  @media (max-width: 480px) {
    .container {
      padding: 0 15px;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1rem;
    }

    .stat-number {
      font-size: 2rem;
    }

    .card-inner {
      padding: 25px 20px;
    }

    .amount {
      font-size: 2.5rem;
    }

    .bottom-cta {
      padding: 40px 20px;
    }

    .bottom-cta h3 {
      font-size: 1.5rem;
    }
  }
</style>
