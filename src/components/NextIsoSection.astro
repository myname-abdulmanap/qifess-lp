<script>
  // Simple animation observer
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate');
        }
      });
    },
    { threshold: 0.1 }
  );

  document.addEventListener('DOMContentLoaded', () => {
    // Initialize animations
    document.querySelectorAll('.animate-element').forEach((el) => {
      observer.observe(el);
    });

    // Accordion functionality
    document.querySelectorAll('.industry-accordion').forEach((accordion) => {
      const item = accordion.querySelector('.industry-item');
      const content = accordion.querySelector('.industry-content');
      const arrow = accordion.querySelector('.accordion-arrow');

      item.addEventListener('click', () => {
        const isOpen = accordion.classList.contains('active');

        // Close all other accordions
        document.querySelectorAll('.industry-accordion').forEach((otherAccordion) => {
          if (otherAccordion !== accordion) {
            otherAccordion.classList.remove('active');
          }
        });

        // Toggle current accordion
        if (isOpen) {
          accordion.classList.remove('active');
        } else {
          accordion.classList.add('active');
        }
      });

      // Set cursor pointer
      item.style.cursor = 'pointer';
    });
  });
</script>

<style>
  .services-section {
    padding: 4rem 0;
    background: var(--service-container);
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .services-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .services-header h2 {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--heading-color);
    margin-bottom: 1rem;
    position: relative;
    display: inline-block;
  }

  .services-header h2::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    border-radius: 2px;
  }

  .services-header p {
    max-width: 600px;
    margin: 1rem auto 0;
    color: var(--text-color);
    font-size: 1rem;
    line-height: 1.6;
    opacity: 0.9;
  }

  /* Main Content Layout */
  .main-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
    margin-bottom: 3rem;
  }

  /* App Preview */
  .app-preview {
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--bg-color), var(--accent-color));
    border-radius: 20px;
    min-height: 350px;
    position: relative;
    overflow: hidden;
  }

  .app-preview::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="rgba(255,255,255,0.1)" stroke-width="1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
  }

  .app-placeholder {
    color: white;
    text-align: center;
    z-index: 1;
    position: relative;
  }

  .app-placeholder h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    opacity: 0.9;
  }

  .app-placeholder p {
    opacity: 0.7;
  }

  /* Industries - Accordion Style */
  .industries {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .industry-accordion {
    background: var(--color-card);
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.1);
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .industry-accordion:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
  }

  .industry-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
  }

  .industry-accordion.active .industry-item {
    background: rgba(255, 255, 255, 0.05);
  }

  .accordion-arrow {
    margin-left: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-color);
    transition: transform 0.3s ease;
    opacity: 0.7;
  }

  .industry-accordion.active .accordion-arrow {
    transform: rotate(180deg);
    opacity: 1;
    color: var(--primary-color);
  }

  .industry-content {
    max-height: 0;
    overflow: hidden;
    transition:
      max-height 0.4s ease-out,
      padding 0.3s ease;
    background: rgba(255, 255, 255, 0.02);
  }

  .industry-accordion.active .industry-content {
    max-height: 300px;
    padding: 0 1rem 1.5rem;
  }

  .content-inner {
    padding-top: 0.5rem;
  }

  .content-inner p {
    color: var(--text-color);
    font-size: 0.9rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .feature-list h4 {
    color: var(--heading-color);
    font-size: 1rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .feature-list ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .feature-list li {
    padding: 0.3rem 0;
    color: var(--text-color);
    font-size: 0.85rem;
    position: relative;
    padding-left: 1rem;
    opacity: 0.9;
  }

  .feature-list li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--primary-color);
    font-weight: bold;
    font-size: 1rem;
  }

  .industry-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 8px;
    color: white;
    flex-shrink: 0;
  }

  .industry-icon.blue {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  }
  .industry-icon.red {
    background: linear-gradient(135deg, #ef4444, #dc2626);
  }
  .industry-icon.yellow {
    background: linear-gradient(135deg, #f59e0b, #d97706);
  }
  .industry-icon.green {
    background: linear-gradient(135deg, #10b981, #059669);
  }

  .industry-item span {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-color);
    flex: 1;
  }

  /* Benefits Section */
  .benefits-section {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .benefit-card {
    background: var(--color-card);
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .benefit-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--card-accent);
  }

  .benefit-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
  }

  .benefit-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .benefit-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    color: white;
  }

  .benefit-icon.customer {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  }
  .benefit-icon.employee {
    background: linear-gradient(135deg, #10b981, #059669);
  }
  .benefit-icon.company {
    background: linear-gradient(135deg, #ef4444, #dc2626);
  }

  .benefit-card:nth-child(1) {
    --card-accent: #3b82f6;
  }
  .benefit-card:nth-child(2) {
    --card-accent: #10b981;
  }
  .benefit-card:nth-child(3) {
    --card-accent: #ef4444;
  }

  .benefit-header h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--heading-color);
    margin: 0;
  }

  .benefit-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .benefit-list li {
    padding: 0.4rem 0;
    color: var(--text-color);
    font-size: 0.9rem;
    position: relative;
    padding-left: 1.25rem;
    opacity: 0.9;
  }

  .benefit-list li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--card-accent);
    font-weight: bold;
    font-size: 1rem;
  }

  /* Simple Animations */
  .animate-element {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s ease;
  }

  .animate-element.animate {
    opacity: 1;
    transform: translateY(0);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .main-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .industries {
      grid-template-columns: 1fr;
    }

    .benefits-section {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .services-header h2 {
      font-size: 1.8rem;
    }

    .app-preview {
      min-height: 250px;
    }

    .modal-content {
      width: 95%;
      margin: 1rem;
    }

    .modal-header {
      padding: 1.25rem 1.25rem 0.75rem;
    }

    .modal-body {
      padding: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .services-section {
      padding: 2.5rem 0;
    }

    .benefit-card {
      padding: 1.25rem;
    }

    .services-header h2 {
      font-size: 1.6rem;
    }

    .modal-header h3 {
      font-size: 1.3rem;
    }
  }
</style>
