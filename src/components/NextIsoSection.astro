<script>
  // Intersection Observer for animations
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px',
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate');
        if (entry.target.querySelector('h2')) {
          entry.target.querySelector('h2').classList.add('animate');
        }
      }
    });
  }, observerOptions);

  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.animate-element').forEach((el) => {
      observer.observe(el);
    });
  });
</script>

<style>
  .services-section {
    padding: 4rem 0;
    background: var(--service-container);
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* Header */
  .services-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .services-header h2 {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--heading-color);
    margin-bottom: 1rem;
    position: relative;
    display: inline-block;
  }

  .services-header h2::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--primary-color), var(--accent-color));
    border-radius: 2px;
    transition: width 0.6s ease;
  }

  .services-header h2.animate::after {
    width: 60px;
  }

  .services-header p {
    max-width: 600px;
    margin: 1rem auto 0;
    color: var(--text-color);
    font-size: 1rem;
    line-height: 1.6;
    opacity: 0.9;
  }

  /* Industry Grid */
  .target-industries {
    margin-bottom: 3rem;
  }

  .industry-grid {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .industry-card {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: var(--color-card);
    padding: 1rem 1.25rem;
    border-radius: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    min-width: 180px;
  }

  .industry-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
  }

  .industry-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    color: white;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .industry-card:hover .industry-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .industry-icon.blue {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  }
  .industry-icon.red {
    background: linear-gradient(135deg, #ef4444, #dc2626);
  }
  .industry-icon.yellow {
    background: linear-gradient(135deg, #f59e0b, #d97706);
  }
  .industry-icon.green {
    background: linear-gradient(135deg, #10b981, #059669);
  }

  .industry-card span {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--text-color);
    white-space: nowrap;
  }

  /* Benefits Section */
  .benefits-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .benefit-card {
    background: var(--color-card);
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    position: relative;
    overflow: hidden;
  }

  .benefit-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 3px;
    background: var(--card-accent);
    transition: height 0.3s ease;
  }

  .benefit-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
  }

  .benefit-card:hover::before {
    height: 4px;
  }

  .benefit-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 1rem;
  }

  .benefit-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 8px;
    color: white;
    transition: transform 0.3s ease;
  }

  .benefit-card:hover .benefit-icon {
    transform: scale(1.1);
  }

  .benefit-icon.customer {
    background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  }

  .benefit-icon.employee {
    background: linear-gradient(135deg, #10b981, #059669);
  }

  .benefit-icon.company {
    background: linear-gradient(135deg, #ef4444, #dc2626);
  }

  .benefit-card:nth-child(1) {
    --card-accent: #3b82f6;
  }
  .benefit-card:nth-child(2) {
    --card-accent: #10b981;
  }
  .benefit-card:nth-child(3) {
    --card-accent: #ef4444;
  }

  .benefit-header h3 {
    font-size: 1.2rem;
    font-weight: 600;
    color: var(--heading-color);
    margin: 0;
  }

  .benefit-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .benefit-list li {
    padding: 0.4rem 0;
    color: var(--text-color);
    font-size: 0.9rem;
    position: relative;
    padding-left: 1.25rem;
    transition: color 0.3s ease;
    opacity: 0.9;
  }

  .benefit-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    color: var(--card-accent);
    font-weight: bold;
    font-size: 1rem;
  }

  .benefit-card:hover .benefit-list li {
    opacity: 1;
  }

  /* Animations */
  .animate-element {
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.6s ease,
      transform 0.6s ease;
  }

  .animate-element.animate {
    opacity: 1;
    transform: translateY(0);
  }

  .fade-up {
    transform: translateY(40px);
  }
  .fade-in-up {
    transform: translateY(25px);
  }

  .benefit-card:nth-child(1).animate {
    transition-delay: 0.1s;
  }
  .benefit-card:nth-child(2).animate {
    transition-delay: 0.2s;
  }
  .benefit-card:nth-child(3).animate {
    transition-delay: 0.3s;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .services-section {
      padding: 3rem 0;
    }
    .services-header h2 {
      font-size: 1.8rem;
    }
    .services-header {
      margin-bottom: 2.5rem;
    }
    .target-industries {
      margin-bottom: 2.5rem;
    }
    .industry-grid {
      gap: 1rem;
    }
    .industry-card {
      min-width: 160px;
    }
    .benefits-section {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }
  }

  @media (max-width: 480px) {
    .services-section {
      padding: 2.5rem 0;
    }
    .services-header h2 {
      font-size: 1.6rem;
    }
    .industry-grid {
      flex-direction: column;
      align-items: center;
    }
    .industry-card {
      width: 100%;
      max-width: 220px;
    }
    .benefit-card {
      padding: 1.25rem;
    }
    .benefit-header {
      gap: 0.5rem;
    }
  }
</style>
