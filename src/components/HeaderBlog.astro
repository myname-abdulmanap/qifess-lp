---
import ThemeToggle from './ThemeToggle.astro';
---

<style>
  header {
    position: fixed;
    width: 100%;
    z-index: 1000;
    transition: all 0.5s ease;
  }

  header.transparent {
    background: transparent;
    box-shadow: none;
  }

  header.white {
    background: var(--bg-color);
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
  }

  .nav-container {
    max-width: 100%;
    margin: 0 auto;
    padding: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo a {
    position: relative;
    display: inline-block;
    width: 200px;
    height: 50px;
    overflow: visible;
  }

  .logo-img {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 80px;
    height: 20px;
    transform: translate(-50%, -50%);
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .logo-white {
    opacity: 0;
  }

  header.transparent .logo-white {
    opacity: 1;
  }

  header.transparent .logo-dark {
    opacity: 0;
  }

  .menu {
    display: flex;
    align-items: center;
  }

  .menu ul {
    display: flex;
    gap: 2.5rem;
    align-items: center;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .menu a {
    text-decoration: none;
    color: var(--text-color);
    font-weight: bold;
    transition: all 0.3s ease;
    font-size: 1.1rem;
    position: relative;
    padding: 0.5rem 0;
  }

  /* Menu hover effects - subtle with underline */
  .menu a:not(.try-button):hover {
    color: var(--primary-color);
    transform: translateY(-1px);
  }

  .menu a:not(.try-button)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--primary-color);
    transition: width 0.3s ease;
  }

  .menu a:not(.try-button):hover::after {
    width: 100%;
  }

  header.white .menu a {
    color: var(--text-bar);
  }

  header.white .menu a:not(.try-button):hover {
    color: var(--primary-color);
  }

  /* Try QIFESS Button - Updated with CSS Variables */
  .try-button {
    background: var(--bg-color);
    color: var(--primary-color);
    border: 2px solid var(--primary-color);
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: var(--transition);
    cursor: pointer;
    position: relative;
    overflow: hidden;
    display: inline-block;
    white-space: nowrap;
    box-shadow: var(--shadow-sm);
  }

  /* Mobile Try Button - hidden on desktop */
  .mobile-try-button {
    display: none;
  }

  .try-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, var(--primary-light), transparent);
    transition: left 0.5s;
  }

  .try-button:hover::before {
    left: 100%;
  }

  .try-button:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    background: var(--primary-color);
    color: var(--bg-color);
    border-color: var(--primary-color);
  }

  .try-button:active {
    transform: translateY(0);
  }

  /* Transparent header button styling */
  header.transparent .try-button {
    background: rgba(255, 255, 255, 0.1);
    color: var(--text-color);
    border: 2px solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
  }

  header.transparent .try-button:hover {
    background: var(--bg-color);
    color: var(--primary-color);
    border-color: var(--bg-color);
  }

  .navbar-icons {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .navbar-icons .icon {
    margin-left: 20px;
    font-size: medium;
    background-color: var(--bg-color);
    padding: 2px;
    border-radius: 10px;
  }

  .bar {
    display: block;
    width: 27px;
    height: 6px;
    margin: 3px;
    background-color: var(--text-bar);
    transition: 0.3s;
  }

  header.white .bar {
    background-color: var(--text-bar);
  }

  header.transparent .bar {
    background-color: white;
  }

  .hamburger {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1001;
    padding: 15px;
  }

  /* Overlay for mobile menu */
  .overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 999;
  }

  .overlay.active {
    display: block;
  }

  /* Dropdown styling */
  .has-dropdown {
    position: relative;
  }

  .has-dropdown .dropdown {
    position: absolute;
    top: 100%;
    left: 0;
    background-color: var(--bg-color);
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    min-width: 200px;
    padding: 0;
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transform: translateY(10px);
    transition:
      opacity 0.3s ease,
      transform 0.3s ease,
      visibility 0.3s;
    overflow: hidden;
    max-height: 0;
    transition: all 0.3s ease;
  }

  .has-dropdown.open .dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    max-height: 200px;
    padding: 0.5rem 0;
  }

  .dropdown li {
    margin: 0;
    padding: 0;
  }

  .dropdown a {
    padding: 0.75rem 1.5rem;
    display: block;
    color: var(--text-color);
    font-weight: normal;
    font-size: 1rem;
    transition: background 0.2s;
    white-space: nowrap;
  }

  .dropdown a:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }

  .dropdown-toggle {
    display: flex;
    align-items: center;
  }

  .dropdown-toggle::after {
    content: 'â–¼';
    display: inline-block;
    margin-left: 6px;
    font-size: 0.7em;
    transition: transform 0.3s ease;
  }

  .has-dropdown.open .dropdown-toggle::after {
    transform: rotate(180deg);
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .hamburger {
      display: block;
    }

    .menu {
      position: fixed;
      top: 0;
      left: -280px;
      height: 100vh;
      width: 280px;
      background: var(--bg-color);
      padding: 2rem;
      transition: left 0.3s ease;
      z-index: 1000;
      overflow-y: auto;
    }

    header.transparent .menu a {
      color: var(--text-color);
    }

    .menu.active {
      left: 0;
    }

    .menu ul {
      flex-direction: column;
      gap: 1.5rem;
      align-items: flex-start;
      width: 100%;
    }

    .menu ul li {
      width: 100%;
    }

    /* Mobile menu structure */
    .menu {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    /* Mobile menu item hover effects */
    .menu a:not(.try-button) {
      padding: 0.75rem 0;
      width: 100%;
      display: block;
    }

    .menu a:not(.try-button):hover {
      color: var(--primary-color);
      transform: translateX(3px);
    }

    .menu a:not(.try-button)::after {
      bottom: 0.5rem;
    }

    .hamburger.active .bar:nth-child(1) {
      transform: rotate(-45deg) translate(-5px, 6px);
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(3) {
      transform: rotate(45deg) translate(-5px, -6px);
    }

    /* Mobile Try Button - Add actual clickable element */

    /* Mobile dropdown styles */
    .has-dropdown .dropdown {
      position: static;
      box-shadow: none;
      border-radius: 0;
      background: transparent;
      padding-left: 1rem;
      max-height: 0;
      overflow: hidden;
    }

    .has-dropdown.open .dropdown {
      max-height: 500px;
    }

    .dropdown a {
      padding: 0.5rem 0;
    }

    .dropdown a:hover {
      color: var(--primary-color);
      transform: translateX(3px);
    }

    .navbar-icons {
      gap: 0.5rem;
    }

    .nav-container {
      padding: 1rem;
    }
  }

  /* Extra small mobile devices */
  @media (max-width: 480px) {
    .nav-container {
      padding: 0.75rem;
    }

    .try-button {
      /* padding: 0.7rem 1.25rem;
      font-size: 0.9rem; */
      display: none;
    }

    .logo a {
      width: 150px;
      height: 40px;
    }

    .logo-img {
      width: 60px;
      height: 15px;
    }
  }
</style>

<div class="overlay"></div>
<header class="transparent">
  <div class="nav-container">
    <div class="logo">
      <a href="/">
        <img
          class="logo-img logo-dark"
          src="/assets/img/qifess-logo.png"
          alt="Logo"
          width="50"
          height="50"
        />
        <img
          class="logo-img logo-white"
          src="/assets/img/qifess-logo.png"
          alt="Logo"
          width="50"
          height="50"
        />
      </a>
    </div>
    <nav class="menu">
      <ul>
        <li><a href="/#">Home</a></li>
        <li><a href="/">About Us</a></li>
        <li><a href="/products">Products</a></li>
        <li><a href="/contact">Contact Us</a></li>
      </ul>
      <!-- Mobile Try Button - only visible on mobile -->
      <a href="/#demo" class="mobile-try-button">Try for Free</a>
    </nav>

    <div class="navbar-icons">
      <a href="/#demo" class="try-button">Try for Free</a>
      <ThemeToggle />
      <button class="hamburger" aria-label="Menu">
        <span class="bar"></span>
        <span class="bar"></span>
        <span class="bar"></span>
      </button>
    </div>
  </div>
</header>

<script src="/src/components/js/header.ts"></script>
