<style>
  .align-btn {
    text-align: center;
    align-items: center;
  }

  .descporto {
    color: var(--text-color);
    text-align: center;
    align-items: center;
    display: block;
    font-size: 0.9rem;
  }
  .portfolio-section {
    padding: 4rem 0;
    background-color: var(--bg-color);
  }

  .container {
    max-width: 1100px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    color: var(--heading-color);
  }

  .section-header p {
    color: #64748b;
    font-size: 1.1rem;
  }

  .filter-tabs {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .tab {
    padding: 0.5rem 1.25rem;
    border: none;
    background: transparent;
    color: #64748b;
    border-radius: 20px;
    cursor: pointer;
    font-size: 0.95rem;
    transition: all 0.2s ease;
  }

  .tab:hover {
