    transform: translateY(-2px);
  }

  .hidden {
    display: none;
  }
  /* Tablet Breakpoint */
  @media (max-width: 1024px) {
    .portfolio-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

